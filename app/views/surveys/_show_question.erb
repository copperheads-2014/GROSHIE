<div id="question_box">
  <h2><%= @question.body %></h2>
  <form>
  <ul>
  <% @question.choices.each do |choice| %>
    <li><input class="radio" type="radio" name="radio"> <%= choice.body %> </input> </li>
  <% end %>
  </ul>
  <input type="hidden" class="question_id" name="question_id" value="<%= @question_id %>">
  <input class="next" type="button" value="next">
  </form>
</div>

